    </head>
    <style>
        body {
            background: url(~/images/sustainability-3295757_1280.jpeg);
            background-repeat: no-repeat;
            background-position-x: center;
            background-position-y: center;
        }
    </style>

    <body style="background-image: url(/images/sustainability-3295757_1280.jpeg);">

        <div class="unix-login">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="login-content">
                            <div class="login-logo">
                                <div class="login-form">
                                    <div class="login-logo">
                                        <img src="~/images/logo.png">
                                    </div>
                                    <h4>Register</h4>
                                    <form>
                                        <div class="form-group">
                                            <input type="employee name" class="form-control" placeholder="Employee Name">
                                        </div>
                                        <div class="form-group">
                                            <input type="contact number" class="form-control" placeholder="Contact-No">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <input type="re password" class="form-control" placeholder="Re-enter Password">
                                        </div>
                                        <button style="width: 30%;" type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Register</button>
                                        <div class="register-link m-t-15 text-center text">
                                            <p>Already have account ? <a style="color:darkgreen" href="login"> Sign in</a></p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </body>


